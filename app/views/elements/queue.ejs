<%- include('../common/header'); %>
<div class="container-fluid">
    <% for(var i=1; i < queue.length; i++) { %>

      <% if (i%2 == 0) { %>
        <div class="panel panel-default">
          <div class="panel-body">
              <div class="row">
                <div class="col-md-4 col-md-offset-4 text-center">
                    <h4 class="text-center"><%= queue[i].player1 %> vs. <%= queue[i].player2 %></h4>
                </div>
                <div class="col-md-2 col-md-offset-2">
                  <a href="/api/games/abandon/<%= queue[i]._id %>" class="btn btn-danger" role="button">
                    <i class="fa fa-close fa-fw" aria-hidden="true"></i>
                  </a>
                </div>
              </div>
          </div>
        </div>

      <% }else{ %>
        <div class="well">
            <div class="row">
              <div class="col-md-4 col-md-offset-4 text-center">
                  <h4 class="text-center"><%= queue[i].player1 %> vs. <%= queue[i].player2 %></h4>
              </div>
              <div class="col-md-2 col-md-offset-2">
                <a href="/api/games/abandon/<%= queue[i]._id %>" class="btn btn-danger" role="button">
                  <i class="fa fa-close fa-fw" aria-hidden="true"></i>
                </a>
              </div>
            </div>
        </div>
      <% }%>

    <% } %>

    <div class="panel panel-default">
      <div class="panel-body">
          <div class="row">
                <form class="form-inline" method="post" action="/queue">
                    <div class="col-md-6 col-md-offset-3 text-center">
                        <div class="form-group">
                          <input type="text" class="form-control input-lg" name="player1" placeholder="Player 1">
                        </div>
                        <label><h4> vs.</h4></label>
                        <div class="form-group">
                          <input type="text" class="form-control input-lg" name="player2" placeholder="Player 2">
                        </div>
                    </div>
                    <div class="col-md-2 col-md-offset-1">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-plus fa-fw" aria-hidden="true"></i>
                        </button>
                    </div>
                </form>
          </div>
      </div>
    </div>
</div>
<%- include('../common/footer'); %>
